<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zijin.oep.mapper.ChapterMapper">
    <resultMap id="ChapterResultMap" type="com.zijin.oep.model.Chapter">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
        <result column="pid" property="pid"/>
        <result column="courseid" property="courseid"/>
        <result column="type" property="type"/>
    </resultMap>

    <select id="getChapterListByCourseId" resultMap="ChapterResultMap">
        SELECT * FROM tb_chapter WHERE  courseid=#{courseId};
    </select>

    <update id="renameChapterName">
        UPDATE tb_chapter
        SET label=#{name}
        WHERE id=#{id}
    </update>
    <update id="adjustChapter">
        UPDATE tb_chapter
        SET pid=#{parentId}
        WHERE id=#{id}
    </update>
    <update id="updateType">
        UPDATE tb_chapter
        SET type=1
        WHERE id=#{id}
    </update>
    <delete id="deleteChapter">
        DELETE FROM  tb_chapter WHERE  id=#{id}
    </delete>
</mapper>
