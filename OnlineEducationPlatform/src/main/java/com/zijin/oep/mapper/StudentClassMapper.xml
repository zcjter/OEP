<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zijin.oep.mapper.StudentClassMapper">
    <resultMap id="StudentClassMapper" type="com.zijin.oep.model.StudentClass">
        <id column="id" property="id"/>
        <result column="sid" property="sid"/>
        <result column="classid" property="classid"/>
    </resultMap>

    <delete id="removeStudent">
        DELETE FROM tb_studentclass WHERE classid=#{classid} AND sid=#{sid} ;
    </delete>
    <!--统计班级总人数-->
    <select id="countStudentsByClassId" resultType="int">
        SELECT COUNT(*) AS total FROM tb_studentclass WHERE classid = #{classId}
    </select>
</mapper>
