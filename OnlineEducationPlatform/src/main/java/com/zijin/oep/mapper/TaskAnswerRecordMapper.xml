<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zijin.oep.mapper.TaskAnswerRecordMapper">
    <resultMap id="TaskAnswerRecordResultMap" type="com.zijin.oep.model.TaskAnswerRecord">
        <id column="id"  property="id"/>
        <result column="sid" property="sid"></result>
        <result column="sname" property="sname"></result>
        <result column="taskid" property="taskid"></result>
        <result column="questionid" property="questionid"></result>
        <result column="questiontype" property="questiontype"></result>
        <result column="answer" property="answer"></result>
        <result column="score" property="score"></result>
    </resultMap>
    <update id="markingTask">
        UPDATE  tb_taskanswerrecord
        SET score = #{score}
        WHERE  questionid=#{questionId} AND sid=#{studentId} AND taskid=#{taskId} ;
    </update>
</mapper>
